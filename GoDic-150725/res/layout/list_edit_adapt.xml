<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_eadapt_cv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/list_cardview"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" >

            <CheckBox
                android:id="@+id/list_eadpat_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/list_eadapt_iv"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_toRightOf="@id/list_eadpat_cb"
                android:background="@color/godic_white" />

            <TextView
                android:id="@+id/list_eadapt_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/list_eadapt_iv"
                android:gravity="center_horizontal"
                android:text="aaaaa"
                android:textColor="@color/list_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/list_eadapt_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_eadapt_tv_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/list_eadapt_iv"
                android:gravity="right"
                android:text="bbbb"
                android:textColor="@color/list_date"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/list_eadapt_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_eadapt_tv_date"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/list_eadapt_iv"
                android:text="cccc"
                android:textColor="@color/list_content"
                android:textSize="13dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>