<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/godic_grey"
    android:orientation="vertical"
    android:padding="0dp" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:minHeight="?attr/actionBarSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/setting_llo_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_init"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="0dp" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_init"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo"
                        android:padding="0dp" >

                        <TextView
                            android:id="@+id/setting_tv_init"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="기록 삭제"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_webDicSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_webDicSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_webDicSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo" >

                        <TextView
                            android:id="@+id/setting_tv_webDicSelect"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="웹 사전 종류"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_scanWordLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_scanWordLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_scanWordLength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo" >

                        <TextView
                            android:id="@+id/setting_tv_scanWordLength"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="최소 인식 단어길이"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_themeChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_themeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_themeChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo" >

                        <TextView
                            android:id="@+id/setting_tv_themeChange"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="테마 변경"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_wordSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_wordSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_wordSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo" >

                        <TextView
                            android:id="@+id/setting_tv_wordSize"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="글자 크기"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/setting_cv_picOnOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="0dp" >

                <LinearLayout
                    android:id="@+id/setting_llo_picOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_rlo_picOnOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_rlo" >

                        <TextView
                            android:id="@+id/setting_tv_picOnOff"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="사진보기"
                            android:textColor="@color/setting_text"
                            android:textSize="20sp" />

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:padding="0dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>